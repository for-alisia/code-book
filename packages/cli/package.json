{
  "name": "code-book",
  "version": "1.0.0",
  "description": "JS-In-Browser code editor allows to create documentation and save it locally",
  "files": [
    "dist"
  ],
  "bin": "dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "start": "tsc --watch --preserveWatchOutput",
    "prepublishOnly": "esbuild src/index.ts --platform=node --outfile=dist/index.js --bundle --minify --define:process.env.NODE_ENV=\\\"production\\\""
  },
  "keywords": [
    "code",
    "editor",
    "documentation"
  ],
  "author": "Elena Romanova",
  "license": "ISC",
  "dependencies": {
    "@for-alisia/code-client": "^1.0.0"
  },
  "devDependencies": {
    "@for-alisia/code-local-api": "^1.0.0",
    "@types/node": "^14.14.31",
    "commander": "^7.1.0",
    "esbuild": "0.8.26",
    "typescript": "^4.2.2"
  }
}
